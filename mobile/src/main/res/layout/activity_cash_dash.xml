<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.yang.cashdash.CashDashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/map"
        android:src="@drawable/cashdash_logo1"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#FFFFFF">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:id="@+id/cash_button"
            style="?android:attr/borderlessButtonStyle"
            android:background="#649130"
            android:textColor="#FFFFFF"
            android:layout_gravity="bottom"
            android:layout_weight=".5"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:background="#8BC34A"
            android:textColor="#FFFFFF"
            android:text="Dash"
            android:id="@+id/dash_button"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/map_container"
    android:clickable="true"
    android:layout_height="425dp"
    android:layout_weight="7">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cash_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/dash_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#FFFFFF">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SOS"
            android:layout_weight="2"
            android:background="#8BC34A"
            android:onClick="hide"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#FFFFFF"
            android:layout_gravity="bottom|center"
            android:id="@+id/SOS_button"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Requesting..."
            android:layout_weight="2"
            android:background="#B33A3A"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#FFFFFF"
            android:layout_gravity="bottom|center"
            android:visibility="gone"
            android:id="@+id/requesting_button"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:id="@+id/amount_EditText"
            android:singleLine="true"
            android:hint="$ Amount"
            android:gravity="center"
            android:numeric="integer"
            android:layout_gravity="bottom|center"
            android:visibility="gone"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SOS"
            android:layout_weight=".5"
            android:background="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#FFFFFF"
            android:layout_gravity="bottom|center"
            android:id="@+id/confirm_SOS_button"
            android:visibility="gone"
            />

    </LinearLayout>

</LinearLayout>